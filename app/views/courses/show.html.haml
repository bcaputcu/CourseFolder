.page-header
	.row
		.span11
			%h1
				= "#{@course.name}"
				%small= "by #{@course.instructor_name}"

%ul.nav.nav-tabs#myTab
	%li.active
		%a{ :href => "#sections", :'data-toggle' => "tab"} Sections
	%li
		%a{ :href => "#schedule", :'data-toggle' => "tab"} Schedule
.tab-content#myTabContent
	.tab-pane.fade.in.active#sections
		%p
	.tab-pane.fade#schedule
		= button_to "Create a new task", new_course_task_path(@course), class: "btn", method: "get" if current_user.enrolled_to_course? @course
		.row
			.span3
				= render 'course_tasks_table'

